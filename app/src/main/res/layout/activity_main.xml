<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:oak="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/transition">

    <LinearLayout
        android:id="@+id/anim_container"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/welcomeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            android:layout_centerHorizontal="true"
            android:paddingTop="20dp"/>

        <TextView
            android:id="@+id/intro_main_textview"
            android:text="@string/title_text"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcomeTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"/>

        <Button
            android:id="@+id/next_btn"
            android:text="Next"
            android:elevation="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/app_name_textview"
        android:text="BUOY"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="60dp"
        android:visibility="gone"/>

    <com.example.researchbeast.myspectrum.svg.AnimatedSvgView
        android:id="@+id/animated_svg_view"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_below="@id/app_name_textview"
        oak:oakSvgImageSizeX="1080"
        oak:oakSvgImageSizeY="900"
        oak:oakSvgTraceTime="3000"
        oak:oakSvgTraceTimePerGlyph="1000"
        oak:oakSvgFillStart="1600"
        oak:oakSvgFillTime="1000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Event"
        android:id="@+id/newEventBtn"
        android:onClick="onNewEventClick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="48dp"
        android:layout_marginLeft="20dp"
        android:visibility="gone"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View History"
        android:id="@+id/viewHistoryBtn"
        android:layout_alignTop="@+id/newEventBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="viewHistory"
        android:layout_marginRight="20dp"
        android:visibility="gone"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Message"
        android:id="@+id/newDraftBtn"
        android:onClick="onNewDraftClick"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/shimmer_view_container"
        android:layout_toEndOf="@+id/shimmer_view_container" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Drafts"
        android:id="@+id/viewDraftBtn"
        android:onClick="onDraftHistoryClick"
        android:layout_below="@+id/viewHistoryBtn"
        android:layout_alignLeft="@+id/viewHistoryBtn"
        android:layout_alignStart="@+id/viewHistoryBtn" />

</RelativeLayout>
